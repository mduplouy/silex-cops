{% extends "opds/layout.xml.twig" %}

{% block entry %}
    {% for author in authors %}
<entry>
    <title>{{ author.getSort() }}</title>
    <updated>{{ updated }}</updated>
    <id>Silex-COPS:Author:{{ author.getId() }}</id>
    <content type="text">{{ "%s books"|transchoice(author.getBookCount())|format(author.getBookCount()) }}</content>
    <link href="{{ url("opds_author_detail", {"id": author.getId()}) }}" type="application/atom+xml;profile=opds-catalog;kind=navigation"/>
</entry>
    {% endfor %}
{% endblock %}
