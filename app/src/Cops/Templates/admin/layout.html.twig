{% set date_format = "m/d/Y"|trans %}

<!doctype html>
<html>
    <head>
        {% block head %}
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width" />

        <link rel="shortcut icon" href="{{ app.request.basepath }}/assets/favicon.ico" />

        <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/assets/default/css/black-tie/jquery-ui-1.10.4.custom.min.css" medias="all" />
        <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/assets/default/main.css" media="all" />
        <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/assets/default/admin.css" media="all" />

        <title>SilexCOPS - {{ "Administration"|trans }}</title>

        <script type="text/javascript" src="{{ app.request.basepath }}/assets/jquery-2.0.0.min.js"></script>
        <script type="text/javascript" src="{{ app.request.basepath }}/assets/default/js/jquery-ui-1.10.4.custom.min.js"></script>
        <script type="text/javascript" src="{{ app.request.basepath }}/assets/select2/select2.js"></script>
        <link rel="stylesheet" href="{{ app.request.basepath }}/assets/select2/select2.css" />
        {% endblock %}
        {# beforeHeadEnd placeholder #}
        {% block beforeHeadEnd %}{% endblock %}
    </head>

    <body>
        {# afterBodyStart placeholder #}
        {% block afterBodyStart %}{% endblock %}

        <div id="main">
            {% block header %}
                {% include "admin/header.html.twig" %}
            {% endblock %}

            {% block menu %}
                {% include "admin/menu.html.twig" %}
            {% endblock %}

            <div id="main-body">
                {% block mainBody %}{% endblock %}
            </div>

            {% block footer %}
                {% include "footer.html.twig" %}
            {% endblock %}
        </div>

        {# beforeBodyEnd placeholder #}
        {% block beforeBodyEnd %}{% endblock %}
    </body>

</html>
