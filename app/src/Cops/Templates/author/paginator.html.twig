{% set previousPage = '' %}
{% set nextPage = '' %}

{% if pageCount > 1 %}

    {% if pageNum > 1 %}
        {% set previousPage %}
        {% set prevUrl = app.url_generator.generate('author_detail', {'page': pageNum-1, 'id': app.request.get('id') }) %}
        <a href="{{ prevUrl }}" title="{{ "Previous"|trans|escape }}" class="inline-block ui-corner-all ui-icon ui-icon-triangle-1-w">{{ "Previous"|trans }}</a>
        {% endset %}
    {% endif %}

    {% if pageNum < pageCount %}
        {% set nextPage %}
        {% set nextUrl = app.url_generator.generate('author_detail', {'page': pageNum+1, 'id': app.request.get('id') }) %}
        <a href="{{ nextUrl }}" title="{{ "Next"|trans|escape }}" class="inline-block ui-corner-all ui-icon ui-icon-triangle-1-e">{{ "Next"|trans }}</a>
        {% endset %}
    {% endif %}

<div class="paginator">
    {{ previousPage }}
    {{ "Page %d on %d"|trans|format(pageNum, pageCount) }}
    {{ nextPage }}
</div>

{% endif %}

